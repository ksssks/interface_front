.responsive_table
  width: 100%
  border-collapse: collapse

  th, td
    border: 1px solid #ddd
    padding: 10px

  th
    background-color: #f4f4f4

.fourth_template_heading
  font-size: 1.5625rem

.fourth_template_date
  font-size: 0.78125rem

.fourth_template_text
  font-size: 1.09375rem

.fourth_template_quote_heading
  font-size: 1.25rem
  margin-top: 6.25rem

.fourth_template_quote
  font-size: 0.9375rem

.fourth_template_logo
  width: 10rem
  height: 10rem

.fourth_template_logo_name
  margin-top: 0
  font-family: "Bowlby One SC", sans-serif
  font-weight: 400
  font-size: 2.5rem

.fourth_template_images_vertical
  width: 15rem
  height: 22.5rem

.fourth_template_images_horizontal
  width: 30rem
  height: 22.5rem

.mobile_header
  text-align: center
  margin-bottom: 20px

.desktop_header
  display: none
@media screen and (max-width: 1000px)
  .responsive_table
    display: block

    thead
      display: none

    tr
      display: flex
      flex-direction: column
      margin-bottom: 20px

    td
      display: flex
      flex-direction: column
      width: 100%

      .quotes
        order: 4

      td:nth-child(1)
        order: 1

      td:nth-child(2)
        order: 1

      td:nth-child(3)
        order: 3

    .fourth_template_logo
      width: 8rem
      height: 8rem

    .fourth_template_logo_name
      font-size: 2rem

    .fourth_template_heading
      font-size: 1.25rem

    .fourth_template_images_vertical
      width: 15rem
      height: 22rem

    .fourth_template_images_horizontal
      width: 20rem
      height: 15rem

    .fourth_template_text, .fourth_template_quote
      font-size: 0.875rem